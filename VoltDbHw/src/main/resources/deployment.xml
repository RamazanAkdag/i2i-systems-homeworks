<deployment>
    <cluster hostcount="1" sitesperhost="2" kfactor="0" schema="ddl"/>
    <paths>
        <voltdbroot path="/var/voltdb/voltdbroot"/>
        <snapshots path="/var/voltdb/voltdbroot/snapshots"/>
        <exportoverflow path="/var/voltdb/voltdbroot/export_overflow"/>
        <droverflow path="/var/voltdb/voltdbroot/dr_overflow"/>
        <commandlog path="/var/voltdb/voltdbroot/command_log"/>
        <commandlogsnapshot path="/var/voltdb/voltdbroot/command_log_snapshot"/>
        <largequeryswap path="/var/voltdb/voltdbroot/large_query_swap"/>
    </paths>
    <partition-detection/>
    <heartbeat/>
    <ssl/>
    <httpd enabled="true">
        <jsonapi enabled="true"/>
    </httpd>
    <snapshot enabled="false"/>
    <commandlog enabled="false">
        <frequency/>
    </commandlog>
    <systemsettings>
        <temptables/>
        <snapshot/>
        <elastic/>
        <query/>
        <procedure/>
        <resourcemonitor>
            <memorylimit/>
        </resourcemonitor>
        <flushinterval>
            <dr/>
            <export/>
        </flushinterval>
    </systemsettings>
    
</deployment>